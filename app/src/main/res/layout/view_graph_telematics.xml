<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/view_graph_telematics_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/Text.Subheading.Primary"
            android:text="@string/unknown"
            android:drawableStart="@drawable/ic_stats_timeline"
            android:drawablePadding="@dimen/margin_small"
            android:drawableTint="@color/colorPrimary"
            tools:targetApi="m" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            style="@style/Text.Caption.Secondary"
            android:text="Unit:"/>

        <TextView
            android:id="@+id/view_graph_telematics_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            style="@style/Text.Caption.Secondary"
            android:text="@string/unknown"/>

    </LinearLayout>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/view_graph_telematics_graph"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default" />

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_graph_telematics_maximum_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/Text.Body1.Primary"
            android:drawableStart="@drawable/ic_stats_high"
            android:drawablePadding="@dimen/margin_small"
            android:text="@string/data_graph_maximum"/>

        <TextView
            android:id="@+id/view_graph_telematics_maximum_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_toEndOf="@id/view_graph_telematics_maximum_title"
            android:layout_alignBaseline="@id/view_graph_telematics_maximum_title"
            android:gravity="center_vertical"
            style="@style/Text.Body1.Secondary"
            android:text="@string/unknown"/>

        <TextView
            android:id="@+id/view_graph_telematics_minimum_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_graph_telematics_maximum_title"
            android:gravity="center_vertical"
            style="@style/Text.Body1.Primary"
            android:drawableStart="@drawable/ic_stats_low"
            android:drawablePadding="@dimen/margin_small"
            android:text="@string/data_graph_minimum"/>

        <TextView
            android:id="@+id/view_graph_telematics_minimum_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/view_graph_telematics_minimum_title"
            android:layout_alignBaseline="@id/view_graph_telematics_minimum_title"
            android:layout_alignStart="@id/view_graph_telematics_maximum_value"
            android:gravity="center_vertical"
            style="@style/Text.Body1.Secondary"
            android:text="@string/unknown"/>

    </RelativeLayout>

</LinearLayout>